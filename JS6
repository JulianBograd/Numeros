// Convertir Strings a números

const numero1 = "20";
const numero2 = "20.2";
const numero3 = "Uno";
const numero4 = 20

//console.log(numero1);
console.log(Number.parseInt(numero1)); //Convierte String a número entero
console.log(Number.parseFloat(numero2)); //Convierte String a número " flotante " (decimal)
console.log(Number.parseInt(numero3)); // NaN quiere decir que intenta convertir pero no es un número

// Revisar si un número es entero o no
console.log(Number.isInteger(numero4));
